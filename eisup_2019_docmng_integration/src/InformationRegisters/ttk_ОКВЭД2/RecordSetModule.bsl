	для каждого лТекЗапись из ЭтотОбъект цикл
		лТекДата = ТекущаяДата();
		если НЕ ЗначениеЗаполнено(лТекЗапись.КтоДобавил) тогда 
			лТекЗапись.КтоДобавил = "@@"; //глЗначениеПеременной("глТекущийПользователь");
			лТекЗапись.ДатаДобавления = лТекДата;
		конецЕсли;
		лТекЗапись.КтоИзменил = "@@"; //глЗначениеПеременной("глТекущийПользователь");
		лТекЗапись.ДатаИзменения = лТекДата;
	конецЦикла;
