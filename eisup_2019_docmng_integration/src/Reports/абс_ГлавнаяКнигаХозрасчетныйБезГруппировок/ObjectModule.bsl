				Расшифровка.Вставить("Подстрока", Элемент.Значение);
				
			КонецЕсли;
			
		КонецЦикла;
		
		Отчет.Настроить(Расшифровка);
		
		ФормаОтчета = Отчет.ПолучитьФорму(,,Новый УникальныйИдентификатор);
		
