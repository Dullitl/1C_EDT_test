						ПериодПо = Мин(КонецДня(ДатаКон), ПериодПо);
					КонецЕсли;
					
				Иначе
					
					ПериодС = '00010101';
					ПериодПо = ДатаНач;
					
				КонецЕсли;
				
				Расшифровка.Вставить("ДатаНач", ПериодС);
