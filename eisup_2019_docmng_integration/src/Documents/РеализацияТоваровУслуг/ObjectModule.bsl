										 Данные.Курс, 
										 СтруктураШапкиДокумента.КратностьДокумента,
										 Данные.Кратность);
				
				СтрокаТаблицы.ПроводкаСуммаНДС = УчетНДС.РассчитатьСуммуНДС(СтрокаТаблицы.СуммаВсегоРегл,
	                                               Истина, Истина,
	                                               УчетНДС.ПолучитьСтавкуНДС(СтрокаТаблицы.СтавкаНДС));
				
				СтрокаТаблицы.ПроводкаСумма = СтрокаТаблицы.СуммаВсегоРегл - СтрокаТаблицы.ПроводкаСуммаНДС

			КонецЕсли;
		
