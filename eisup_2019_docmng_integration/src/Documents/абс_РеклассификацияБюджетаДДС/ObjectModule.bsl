				Инд = Инд + 1;
				Продолжить;
			КонецЕсли;
			СоздатьСтруктуруИсточника(Периоды[Инд], Ложь);
		Иначе 
			СоздатьСтруктуруИсточника(Неопределено, Ложь);
			СуммаТек = Сумма;
			СуммаЛимитаТек = СуммаЛимита;
			СуммаВалТек = СуммаВал;
			СуммаЛимитаВалТек = СуммаЛимитаВал;	
			СуммаТекПриемника = 0;
			СуммаВалТекПриемника = 0;		
		КонецЕсли;   
		Инд = Инд + 1;
		//АБС Коломиец 19806-
		
		Если ЗначениеЗаполнено(ИсточникСценарий) и НЕ ВидОперации = Перечисления.абс_ВидыОперацийРекласификацияБюджета.ПереносФактаИсполненияБюджета
