		ИЛИ ТипЗнч(ДокументОбъект) = Тип("ДокументОбъект.СчетФактураВыданный")
		ИЛИ ТипЗнч(ДокументОбъект) = Тип("ДокументОбъект.СчетФактураПолученный")
			Тогда
		ПараметрыПроверкиДокумента.Вставить("ПроверятьДатуЗапретаППД", 	Истина);
	КонецЕсли;
	//АБС ВСТАВКА 000030395 КОНЕЦ
